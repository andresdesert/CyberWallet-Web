const withAlpha = (color: string, alpha: number): string => {
  return `color-mix(in srgb, ${color} ${Math.round(alpha * 100)}%, transparent)`;
};

const glassEffect = {
  medium: (colorScheme: PaletteMode) => ({
    background: colorScheme === 'dark' 
      ? 'rgba(13, 15, 17, 0.85)' 
